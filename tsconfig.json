{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "include": ["./src/*"],
  "exclude": ["./node_modules"]
}
